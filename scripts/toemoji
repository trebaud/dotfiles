#!/usr/bin/env bash

declare -A emoji
emoji[smile]=ðŸ˜ƒ
emoji[bear]=ðŸ»
emoji[hamburger]=ðŸ”
emoji[lightbulb]=ðŸ’¡
emoji[idea]=ðŸ’¡
emoji[comment]=ðŸ’¬
emoji[chat]=ðŸ’¬
emoji[pomo]=ðŸ…
emoji[stop]=ðŸ›‘
emoji[warning]=âš ï¸
emoji[rant]=ðŸ¤¬
emoji[tv]=ðŸ“º
emoji[update]=ðŸ“°
